#include "SPI_api.h"
#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/ioctl.h>
#include <sys/stat.h>
#include <sys/types.h>

int main(void)
{
	int fp, err;
	int datalen = 4;
	char data[] = "MICK";

	fp = open("/dev/spi_dev", O_RDWR);

	for(int i = 0 ; i < datalen ; i++){

		err = write(fp, &data[i], datalen);
		if(err < 0)
			printf("WRITE ERROR\n");
	}



	close(fp);

	return 0;
}
