#include "SPI_api.h"
#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/ioctl.h>
#include <sys/stat.h>
#include <sys/types.h>

int main(void)
{
	int fp;
	int err;
	int datalen = 2;
	char data[2] = { 0, 0 };

	fp = open("/dev/spi_dev", O_RDWR);

	err = write(fp, data, datalen);

	close(fp);


	return 0;
}
