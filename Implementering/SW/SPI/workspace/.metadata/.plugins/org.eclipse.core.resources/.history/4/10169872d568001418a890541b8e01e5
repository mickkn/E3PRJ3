#include "SPI_api.h"
#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/ioctl.h>
#include <sys/stat.h>
#include <sys/types.h>

int main(void)
{
	int fp;
	int err;
	int datalen = 1;
	char data[1] = { 'C' };

	fp = open("/dev/spi_dev", O_RDWR);

	err = write(fp, data, datalen);
	if(err < 0)
		printf("WRITE ERROR\n");

	close(fp);

	return 0;
}
