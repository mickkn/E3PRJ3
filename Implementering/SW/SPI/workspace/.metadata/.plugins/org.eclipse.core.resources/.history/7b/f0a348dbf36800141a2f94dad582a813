#include "SPI_api.h"
#include <iostream>
#include <vector>
#include <fcntl.h>
#include <stdio.h>

int SPI_api::activate(int unit) const
{
	int fp, err;
	int datalen = 2;	// String length
	char data[] = "AA";	// 'A' for Activate

	/* Open file */
	fp = open("/dev/spi_dev", O_RDWR);

	/* Write datalen times */
	for(int i = 0 ; i < datalen ; i++){

		err = write(fp, &data[i], datalen);
		if(err < 0){
			printf("WRITE ERROR\n");
			goto write_error;
		}
	}

	/* Close file */
	close(fp);

	return 0;

	write_error:
		close(fp);
		return -1;
}

int SPI_api::deactivate(int unit) const
{
	return 0;
}

int SPI_api::verify(int unit) const
{
	return 0;
}

int SPI_api::config(int unit, vector<string>)
{
	return 0;
}

